<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="90dp"
              android:background="@drawable/romanblack_audio_comments_corner"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:paddingRight="15dp"
              android:paddingLeft="15dp">
            
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                
        <ImageView android:id="@+id/romanblack_audio_comments_listview_header_thumb"
                   android:layout_height="70dp"
                   android:layout_width="70dp"
                   android:padding="1dp"
                   android:background="#676b6f"/>
                
        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:paddingLeft="10dp">
                    
            <TextView android:id="@+id/romanblack_audio_comments_listview_header_title"
                      android:layout_height="wrap_content"
                      android:maxHeight="30dp"
                      android:layout_width="fill_parent"
                      android:maxLines="2"
                      android:textColor="#ffffff"
                      android:textStyle="bold"
                      android:textSize="12dp"
                      android:layout_marginBottom="10dp"/>
                    
            <TextView android:id="@+id/romanblack_audio_comments_listview_header_description"
                      android:layout_height="wrap_content"
                      android:layout_width="fill_parent"
                      android:textColor="#afb2b5"
                      android:textSize="12dp"/>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="10dp"
                  android:orientation="horizontal"/>
            
</LinearLayout>
